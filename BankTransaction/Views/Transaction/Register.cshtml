@model BankTransaction.Models.Register

<h2 class="text-center mb-4">Register</h2>

<div class="container d-flex justify-content-center align-items-center min-vh-70">
    <div class="card p-4 shadow-sm" style="width: 350px;">
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Name" class="form-label">User Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">User Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password2" class="form-label">Confirm Password</label>
                <input asp-for="Password2" class="form-control" type="password" />
                <span asp-validation-for="Password2" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>

            <div class="mt-3">
                @if (!ViewData.ModelState.IsValid)
                {
                    foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div class="text-danger">@err.ErrorMessage</div>
                    }
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
