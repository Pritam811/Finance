@model BankTransaction.Models.Transaction;
<div class="container">
	<h3>Add</h3>
	<form asp-action="Create" method="post">
		<div>
			<label asp-for="AccountNumber"></label>
			<input asp-for="AccountNumber" class="form-control" />
		</div>
		<div>
			<label asp-for="ClientName"></label>
			<input asp-for="ClientName" class="form-control" />
		</div>
		<div>
			<label asp-for="BankName"></label>
			<input asp-for="BankName" class="form-control" />
		</div>
		
		<div>
			<label asp-for="Amount"></label>
			<input asp-for="Amount" class="form-control" />
		</div>
		<div>
			<label asp-for="Loan"></label>
			<input asp-for="Loan" class="form-control" />
		</div>
		<button class="ml-1 mt-2" type="submit">Add Transaction</button>
	</form>
</div>